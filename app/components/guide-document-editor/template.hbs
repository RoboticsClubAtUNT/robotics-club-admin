<form class="guideDocumentEditor">

  <div class="guideDocumentEditorTitle">
    {{input value=title placeholder="Enter your guide's title here..."}}
  </div>

  <div class="guideDocumentEditorBody">
    {{textarea value=body placeholder="Paste your markdown here..."}}
  </div>

  <div class="guideDocumentEditorCreate">
    <button type="button" name="button" {{action 'doRouteAction'}}>Submit</button>
  </div>

</form>
