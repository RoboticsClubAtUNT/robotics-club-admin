<form class="" action="index.html" method="post" class="loginForm" {{action 'authenticate' on="submit"}}>
  <div class="loginFormSegment">
    <label for="">User</label>
    {{input value=username}}
  </div>
  <div class="loginFormSegment">
    <label for="">Secret</label>
    {{input value=password type="password"}}
  </div>
  <div class="loginFormSegment">
    <button type="submit" class="loginFormSubmit">Sign In</button>
  </div>

</form>
